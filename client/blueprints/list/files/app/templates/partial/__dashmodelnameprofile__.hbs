<div class="row">
    <div class="col-sm-12">
        <h4 class="dataTables_filter">
            <button class="btn btn-white" {{action "edit"}}>
                <i class="icon-pencil purple align-top bigger-125"></i>编辑信息
            </button>
        </h4>
    </div>
</div>
<div class="row">
      {{! every each for model constructor columns}}
       <% var len = modelFormOptions.length; %>
      <% if (len<=fieldInterval){%>
         <div class="col-xs-6" style="padding:0px;">
           <div class="profile-user-info profile-user-info-striped" style="margin:0 0 0 12px;">
              <% modelFormOptions.forEach(function(item){ %>
              <div class="profile-info-row">
                  <div class="profile-info-name col-xs-5" style="float:none;"> <%=item.label%> </div>
                  <div class="profile-info-value">
                        <span class="editable" id="username">
                          {{<%=item.field%>}}
                        </span>
                  </div>
              </div>
              <% }); %>
           </div>
         </div>
      <%}else if(len>fieldInterval){%>
          <% var gtten = len>(fieldInterval*2)%>
          <% var mid = gtten?Math.ceil(len/2):fieldInterval%>
          <div class="col-xs-6" style="padding:0px;">
            <div class="profile-user-info profile-user-info-striped" style="margin:0 0 0 12px;">
            <% for(var i=0;i<mid;i++){%>
              <div class="profile-info-row">
                  <div class="profile-info-name col-xs-5" style="float:none;"> <%=modelFormOptions[i].label%> </div>
                  <div class="profile-info-value">
                      <span class="editable" id="username">
                        {{<%=modelFormOptions[i].field%>}}
                      </span>
                  </div>
              </div>
            <%}%>
           </div>
          </div>

          <div class="col-xs-6" style="padding:0px;">
              <div class="profile-user-info profile-user-info-striped" style="margin:0 0 0 12px;">
              <% for(var i=mid;i<len;i++){%>
                <div class="profile-info-row">
                    <div class="profile-info-name col-xs-5" style="float:none;"> <%=modelFormOptions[i].label%> </div>
                    <div class="profile-info-value">
                        <span class="editable" id="username">
                          {{<%=modelFormOptions[i].field%>}}
                        </span>
                    </div>
                </div>
              <%}%>
              </div>
          </div>
      <%}%>
